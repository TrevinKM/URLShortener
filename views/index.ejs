<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Document</title>
</head>
<body class=" p-3 mb-2 bg-secondary text-white">
    <div class="container">

        <h1>URL Shortener</h1>
        <form action="/shortUrl" method="POST" class="my-3">
            <label for="fullUrl">Full URL: </label>
            <input type="url" name="fullUrl" id="fullUrl" class="form-control mr-2">
            <button class="btn btn-danger" type="submit">Shorten</button>
        </form>
        
        <table class="table table-sm table-dark">
            <thead>
                <tr>
                    <th>Hits</th>
                    <th>Full URL</th>
                    <th>Short URL</th>
                </tr>
        </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl => { %>
                    <tr>
                        <td><%= shortUrl.hits %></td>
                        <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                        <td><a id="copyText" href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                        <td>
                            <input type="button"  class="btn btn-success" onclick="copyLink()" data-toggle="tooltip" title="Copy to Clipboard" value="copy link" readonly />

                                <script>
                                function copyLink() {
                                    navigator.clipboard.writeText(shortUrl.short);
                                    // let copyText = document.getElementById("copyText"); 

                                    // copyText.select();
                                    // copyText.setSelectionRange(0, 99999);
                                    // navigator.clipboard.writeText(copyText.value).then(() => {
                                    //     alert("success")
                                    // })
                                    // .catch (() => {
                                    //     alert("no success")
                                    // });

                                    // document.execCommand('copy');
                                }
                                </script>
                        </td>
                        <td><input type="button"  class="btn btn-danger" onclick="copyLink()" data-toggle="tooltip" title="Copy to Clipboard" value="delete" readonly /></td>
                    </tr>
                  <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>